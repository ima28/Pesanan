<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#017b64"
    android:orientation="horizontal"
    android:padding="20dp"
    tools:context=".Activity.Register">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="239dp"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/logoo"
        android:textAlignment="center" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/edtnama"
        android:drawableLeft="@drawable/username"
        android:layout_marginTop="250dp"
        android:hint="USERNAME"
        android:textColorHighlight="#0000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:padding="10dp"
        android:background="@drawable/ovalcorner"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/edtemaill"
        android:layout_marginTop="300dp"
        android:hint="EMAIL"
        android:drawableLeft="@drawable/email"
        android:textColorHighlight="#0000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:padding="10dp"
        android:background="@drawable/ovalcorner"
        android:layout_alignParentEnd="true"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/edtpassword"
        android:inputType="textPassword"
        android:layout_marginTop="350dp"
        android:hint="PASSWORD"
        android:drawableLeft="@drawable/password"
        android:textColorHighlight="#0000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:padding="10dp"
        android:background="@drawable/ovalcorner"
        android:layout_alignParentEnd="true"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/edtnotlp"
        android:layout_marginTop="400dp"
        android:hint="TELEFON"
        android:drawableLeft="@drawable/notlp"
        android:textColorHighlight="#0000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:padding="10dp"
        android:background="@drawable/ovalcorner"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/btnregister"
        android:textColor="#000"
        android:background="@drawable/custom1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="460dp"/>


</RelativeLayout>